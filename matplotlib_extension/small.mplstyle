font.size:    15 # 10.0

#xtick.labelsize:     12.5 # medium  # font size of the tick labels
#ytick.labelsize:     12.5 # medium  # font size of the tick labels

legend.fontsize:      15 # medium
legend.title_fontsize: 15 # None    # None sets to the same as the default axes.

figure.subplot.left:   0.27 # 0.125  # the left side of the subplots of the figure
figure.subplot.right:  0.93 # 0.9    # the right side of the subplots of the figure
figure.subplot.bottom: 0.27 # 0.11   # the bottom of the subplots of the figure
figure.subplot.top:    0.93 # 0.88   # the top of the subplots of the figure
